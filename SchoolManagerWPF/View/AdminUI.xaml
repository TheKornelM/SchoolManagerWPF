<Window x:Class="SchoolManagerWPF.View.AdminUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolManagerWPF.View"
        xmlns:resx="clr-namespace:SchoolManagerWPF.Resources"  
        mc:Ignorable="d"
        Title="AdminUI" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="{x:Static resx:UI.Users}" >
                <Grid Background="#FFE5E5E5" Margin="-1,0,1,0" Name="Users">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="54*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{x:Static resx:UI.Username}" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.514,-0.02" Margin="10,0,0,0"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,37,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="206" RenderTransformOrigin="1.477,2.339"/>
                    <Label Content="{Binding UsernameValidatorErrors}" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold"/>
                </Grid>

            </TabItem>
            <TabItem Header="{x:Static resx:UI.Classes}">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="{x:Static resx:UI.AddSubject}"></TabItem>
            <TabItem Header="{x:Static resx:UI.Roster}"></TabItem>
        </TabControl>

    </Grid>
</Window>
